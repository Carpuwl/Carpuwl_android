<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="DreamTextHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@drawable/dream_text_color_selector</item>
        <item name="android:paddingLeft">@dimen/touchable_ui_spacing</item>
    </style>

    <style name="DreamTextContent">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@drawable/dream_text_color_selector</item>
    </style>

    <style name="DreamTextContent.Condensed">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonDreamTeam.Alternate">
        <item name="android:background">@drawable/btn_generic_alternate_selector</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DreamEditPrice" parent="@style/EditTextDreamTeam">
        <item name="android:inputType">number</item>
        <item name="android:digits">0123456789</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">2</item>
    </style>

</resources>