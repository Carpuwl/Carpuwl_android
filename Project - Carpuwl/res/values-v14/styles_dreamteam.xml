<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Action Bar Style -->
    <style name="ActionBar.Solid.DreamTeam" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_dreamteam</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_dreamteam</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_dreamteam</item>
        <item name="android:progressBarStyle">@style/ProgressBar.DreamTeam</item>
    </style>

    <style name="ActionBar.Transparent.DreamTeam" parent="@style/Widget.Sherlock.ActionBar">
        <item name="android:background">@drawable/ab_transparent_dreamteam</item>
        <item name="android:progressBarStyle">@style/ProgressBar.DreamTeam</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.DreamTeam.Widget" parent="@style/Theme.Sherlock">
        <item name="android:popupMenuStyle">@style/PopupMenu.DreamTeam</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.DreamTeam</item>
    </style>

</resources>