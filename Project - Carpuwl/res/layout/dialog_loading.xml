<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.dreamteam.carpuwl"
    android:layout_width="@dimen/dialog_loading_width"
    android:layout_height="@dimen/dialog_loading_height"
    android:layout_gravity="center"
    android:background="@drawable/google_now_style_card"
    android:orientation="horizontal" >

    <ProgressBar
        android:id="@+id/dialog_loading_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_margin" />

    <com.rperryng.roboto.RobotoTextView
        android:id="@+id/dialog_loading_text_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_margin"
        app:font="light" />

</LinearLayout>